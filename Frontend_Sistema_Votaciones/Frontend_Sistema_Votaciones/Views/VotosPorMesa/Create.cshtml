@model Frontend_Sistema_Votaciones.Models.VotosPorMesasViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>VotosPorMesasViewModel</h4>
<hr />
<form asp-action="Create">
    <div class="row">
        @foreach (var alcalde in ViewBag.Alcaldes)
        {
            <div class="col-4 mb-4">
                <div class="border border-5 border-white p-3">
                    <img src="~/NiceAdmin/assets/img/Flag_of_Honduras.svg.png" alt="Imagen-partido-politico" class="w-100 mb-2" />
                    <img src="~/NiceAdmin/assets/img/profile-img.jpg" class="w-100 mb-2" />
                    <h5>@alcalde.Alca_Imagen</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="VoMe_CandidatoId" id="@("rb-" + alcalde.Alca_Id)" value="@alcalde.Alca_Id">
                        <label class="form-check-label" for="@("rb-" + alcalde.Alca_Id)">
                            Seleccionar
                        </label>
                    </div>
                </div>
            </div>
        }

        <div class="col-4 mb-4">
            <div class="border border-5 border-white p-3">
                <h1>Voto nulo</h1>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="VoMe_CandidatoId" id="rb-nulo" value="0">
                    <label class="form-check-label" for="rb-nulo">
                        Seleccionar
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group mt-4">
        <input type="submit" value="Crear Voto" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver al Listado</a>
</div>
