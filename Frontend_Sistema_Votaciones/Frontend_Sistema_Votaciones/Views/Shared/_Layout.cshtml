<body>
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="~/NiceAdmin/assets/img/Flag_of_Honduras.svg.png" alt="">
                <span class="d-none d-lg-block">Sistema Electoral</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->

                <li class="nav-item dropdown pe-3">

                    @if (Rol_Id != 0)
                    {
                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                            <img src="@Usua_Imagen" alt="Profile" class="rounded-circle">
                            <span class="d-none d-md-block dropdown-toggle ps-2">@Vota_NombreCompleto</span>
                        </a><!-- End Profile Iamge Icon -->
                    }
                    else
                    {
                        <a asp-controller="Login" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar sesion
                        </a><!-- End Profile Iamge Icon -->
                    }

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@Vota_NombreCompleto</h6>
                            <span>@Carg_Descripcion</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="Login" asp-action="CerrarSesion">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar Sesion</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link " asp-controller="VotosPorMesa" asp-action="Index">
                    <i class="ri ri-bar-chart-2-fill"></i>
                    <span>Graficos</span>
                </a>
            </li><!-- End Dashboard Nav -->
            @if (Rol_Id == 0)
            {
                <li class="nav-item">
                    <a class="nav-link " asp-controller="Home" asp-action="Index">
                        <i class="ri ri-account-pin-box-fill"></i>
                        <span>Votar</span>
                    </a>
                </li><!-- End Dashboard Nav -->
            }
            else
            {
                if (esquemasDictionary != null)
                {
                    foreach (var esquema in esquemasDictionary)
                    {
                        <li class="nav-item">
                            <a id="@esquema.Key" class="nav-link collapsed" data-bs-target="#@esquema.Key" data-bs-toggle="collapse" href="#">
                                @switch (esquema.Value)
                                {
                                    case "Acceso":
                                        <i class="bi bi-lock-fill"></i>
                                        break;
                                    case "General":
                                        <i class="ri ri-admin-fill"></i>
                                        break;
                                    case "Votaciones":
                                        <i class="ri ri-ball-pen-fill"></i>
                                        break;
                                    default:
                                        <i class="bi bi-circle"></i>
                                        break;
                                }
                                <span>@esquema.Value</span><i class="bi bi-chevron-down ms-auto"></i>
                            </a>
                            <ul id="@esquema.Key" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                                @if (paroDictionary != null)
                                {
                                    foreach (var pantalla in paroDictionary[Rol_Id])
                                    {
                                        if (pantalla.Esqu_Id == esquema.Key)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link " asp-controller="@pantalla.Pant_Controlador" asp-action="Index">
                                                    <i class="bi bi-circle"></i>
                                                    <span>@pantalla.Pant_Descripcion</span>
                                                </a>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </li>
                    }
                }
            }

        </ul>
    </aside><!-- End Sidebar-->
    <!-- Vendor JS Files -->
