@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@{ 
    HttpContextAccessor _httpContextAccessor = new HttpContextAccessor();
    var Rol_Id = _httpContextAccessor.HttpContext.Session.GetInt32("Rol_Id") ?? 0;
    var Carg_Descripcion = _httpContextAccessor.HttpContext.Session.GetString("Carg_Descripcion");
    var Usua_Imagen = _httpContextAccessor.HttpContext.Session.GetString("Usua_Imagen");
    var Vota_NombreCompleto = _httpContextAccessor.HttpContext.Session.GetString("Vota_NombreCompleto");
    var paroDictionaryString = _httpContextAccessor.HttpContext.Session.GetString("paroDictionary");
    var esquemasDictionaryString = _httpContextAccessor.HttpContext.Session.GetString("esquemasDictionary");

    Dictionary<int, HashSet<PantallasViewModel>> paroDictionary = null;
    if (paroDictionaryString != null)
    {
        paroDictionary = JsonConvert.DeserializeObject<Dictionary<int, HashSet<PantallasViewModel>>>(paroDictionaryString);
    }

    Dictionary<int, string> esquemasDictionary = null;
    if (paroDictionaryString != null)
    {
        esquemasDictionary = JsonConvert.DeserializeObject<Dictionary<int, string>>(esquemasDictionaryString);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Frontend_Sistema_Votaciones</title>
