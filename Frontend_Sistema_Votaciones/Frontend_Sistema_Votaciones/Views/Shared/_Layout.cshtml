<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Frontend_Sistema_Votaciones</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@

    <link href="~/NiceAdmin/assets/img/Flag_of_Honduras.svg.png" rel="icon">

    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <link href="~/NiceAdmin/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/vendor/simple-datatables/style.css" rel="stylesheet">
    <link href="~/css/IziToast.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/NiceAdmin/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="~/NiceAdmin/assets/img/Flag_of_Honduras.svg.png" alt="">
                <span class="d-none d-lg-block">Sistema Electoral</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->

                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/NiceAdmin/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">K. Anderson</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>Kevin Anderson</h6>
                            <span>Web Designer</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="#">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Cerrar Sesion</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="index.html">
                    <i class="bi bi-house"></i>
                    <span>Inicio</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link " asp-controller="Votante" asp-action="VerificarVoto">
                    <i class="ri ri-account-pin-box-fill"></i>
                    <span>Votar</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link " asp-controller="VotosPorMesa" asp-action="Index">
                    <i class="ri ri-bar-chart-2-fill"></i>
                    <span>Graficos</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-menu-button-wide"></i><span>Generales</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-controller="Departamento" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Departamentos</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Municipio" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Municipios</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Sedes" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Sedes</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Mesas" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Mesas</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="EstadosCiviles" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Estados Civiles</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Votante" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Votantes</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Cargos" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Cargos</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Empleados" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Empleados</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="VotosPorMesa" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Votos Por Mesas</span>
                        </a>
                    </li>


                </ul>
            </li><!-- End Components Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                    <i class="ri ri-admin-fill"></i><span>Acceso</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-controller="Roles" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Roles</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Usuarios" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Usuarios</span>
                        </a>
                    </li>

                </ul>
            </li><!-- End Forms Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="ri ri-ball-pen-fill"></i><span>Votaciones</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-controller="Alcalde" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Alcaldes</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Partidos" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Partidos</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Presidentes" asp-action="Index">
                            <i class="bi bi-circle"></i><span>Presidentes</span>
                        </a>
                    </li>

                </ul>
            </li><!-- End Tables Nav -->
        </ul>
    </aside><!-- End Sidebar-->
    <!-- Vendor JS Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/NiceAdmin/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/NiceAdmin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/quill/quill.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/NiceAdmin/assets/vendor/php-email-form/validate.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/NiceAdmin/assets/js/main.js"></script>
    <script src="~/js/IziToast.js"></script>

    <script>
  $(document).ready(function () {
        @if (TempData["Exito"] != null)
        {
            <text>
                iziToast.success({
                    title: 'Éxito',
                    message: '@TempData["Exito"]',
                    position: 'topRight',
                    transitionIn: 'flipInX',
                    transitionOut: 'flipOutX'
                });
            </text>
        }

        @if (TempData["Error"] != null)
        {
            <text>
                iziToast.error({
                    title: 'Error',
                    message: '@TempData["Error"]',
                    position: 'topRight',
                    transitionIn: 'flipInX',
                    transitionOut: 'flipOutX'
                });
            </text>
        }
        @if (TempData["Advertencia"] != null)
        {
            <text>
                iziToast.warning({
                    title: 'Error',
                    message: '@TempData["Advertencia"]',
                    position: 'topRight',
                    transitionIn: 'flipInX',
                    transitionOut: 'flipOutX'
                });
            </text>
        }
    });
    </script>
    <main id="main" role="main" style="margin-top: 12vh;">
        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>Votaciones</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a href="https://bootstrapmade.com/">Honduras</a>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>*@


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
