@model Frontend_Sistema_Votaciones.Models.CargoViewModel

@{
    ViewData["Title"] = "tbCargos".Substring(2);
    ViewData["ViewName"] = "_Edit".Substring(1);
}
<h1 class="text-primary">Editar </h1>
<h4 class="text-primary">@ViewData["Title"]</h4>
<hr class="border border-primary" />
<div>
    <div>
        <form asp-action="@ViewData["ViewName"]" asp-controller="Cargos" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-wrap justify-content-around">
                <input type="hidden" id="Carg_Id_Edit" name="Carg_Id" />
                <div class="form-group col-sm-5 mb-4">
                    <label for="Carg_Descripcion" class="control-label"></label>
                    <input id="Carg_Descripcion_Edit" name="Carg_Descripcion" class="form-control" @*value="@Model.Carg_Descripcion"*@ />
                    <span asp-validation-for="Carg_Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <div class="form-row">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}