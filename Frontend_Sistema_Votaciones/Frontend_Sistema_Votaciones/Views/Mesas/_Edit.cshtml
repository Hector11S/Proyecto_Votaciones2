@model Frontend_Sistema_Votaciones.Models.MesasViewModel

@{
    ViewData["Title"] = "tbMesas".Substring(2);
    ViewData["ViewName"] = "_Edit".Substring(1);
}
<h1 class="text-primary">Editar </h1>
<h4 class="text-primary">@ViewData["Title"]</h4>
<hr class="border border-primary" />
<div>
    <div>
        <form asp-action="@ViewData["ViewName"]" asp-controller="Mesas" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-wrap justify-content-around">
                <input type="hidden" id="Mesa_Id_Edit" name="Mesa_Id" />
                <div class="form-group col-sm-5 mb-4">
                    <label for="Mesa_Numero" class="control-label"></label>
                    <input id="Mesa_Numero_Edit" name="Mesa_Numero" class="form-control" @*value="@Model.Dept_Descripcion"*@ />
                    <span asp-validation-for="Mesa_Numero" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <div class="form-row">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    const txtMesa_Numero = document.getElementById("Mesa_Numero_Edit");
    txtMesa_Numero.addEventListener("input", () => {
        const val = txtMesa_Numero.value.replace(/[^0-9]/g, '');
        txtMesa_Numero.value = val.substr(0, 2);
    })
</script>