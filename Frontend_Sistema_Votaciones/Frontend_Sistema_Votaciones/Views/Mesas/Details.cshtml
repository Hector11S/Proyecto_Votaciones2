@model Frontend_Sistema_Votaciones.Models.DepartamentoViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detalles</h1>


<div class="card m-3">
    <div class="card-header text-center">
        Información del Departamento
    </div>
    <div class="card-body">
        <dl class="row">
            <div class="col-sm-6">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Dept_Codigo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Dept_Codigo)
                    </dd>
                </dl>
            </div>
            <div class="col-sm-6">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Dept_Descripcion)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Dept_Descripcion)
                    </dd>
                </dl>
            </div>
        </dl>
    </div>
</div>

<hr />
<div class="mx-3">
    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.Dept_Codigo })">Editar</a>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Regresar</a>
</div>

<hr />
<div class="card m-3">
    <div class="card-header text-center">
        Auditoría
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dept_UsuarioCreacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dept_UsuarioCreacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dept_FechaCreacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dept_FechaCreacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dept_UsuarioModifica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dept_UsuarioModifica)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Dept_FechaModifica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dept_FechaModifica)
            </dd>
        </dl>
    </div>
</div>


