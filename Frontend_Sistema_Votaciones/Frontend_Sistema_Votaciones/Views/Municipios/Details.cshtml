@model Frontend_Sistema_Votaciones.Models.MunicipioViewModel

@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Municipios";
    var abrirModal = TempData["AbrirModal"];
    string serializedItem = (string)TempData["Item"];

    MunicipioViewModel itemModel = null;
    if (!String.IsNullOrEmpty(serializedItem))
    {
        itemModel = JsonConvert.DeserializeObject<MunicipioViewModel>(serializedItem);
    }
}

<h1 class="text-center">Detalles</h1>


<div class="card m-3">
    <div class="card-header text-center">
        Información del Municipio
    </div>
    <div class="card-body">
        <dl class="row">
            <div class="col-sm-6">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Muni_Codigo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Muni_Codigo)
                    </dd>
                </dl>
            </div>
            <div class="col-sm-6">
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.Muni_Descripcion)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Muni_Descripcion)
                    </dd>
                </dl>
            </div>
        </dl>
    </div>
</div>

<hr />
<div class="mx-3">
    @*<a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.Muni_Codigo })">Editar</a>*@
    <button data-id="@Model.Muni_Codigo" class="btnEditar btn btn-primary" style="max-width: 100px">
        <i class="bi bi-pencil"></i>
        Editar
    </button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Regresar</a>
</div>

<hr />
<div class="card m-3">
    <div class="card-header text-center">
        Auditoría
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Muni_UsuarioCreacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Muni_UsuarioCreacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Muni_FechaCreacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Muni_FechaCreacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Muni_UsuarioModifica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Muni_UsuarioModifica)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Muni_FechaModifica)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Muni_FechaModifica)
            </dd>
        </dl>
    </div>
</div>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Edit", new Frontend_Sistema_Votaciones.Models.MunicipioViewModel())
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#dtMunicipios').DataTable();
        $('#modal' + '@abrirModal').modal('show');
        @if (itemModel != null)
        {
            switch (abrirModal)
            {
                case "Nuevo":
                    <text>
                        $('#Muni_Codigo_Create').val("@itemModel.Muni_Codigo");
                        $('#Muni_Codigo_Create').val("@itemModel.Muni_Codigo");
                        $('#Muni_Descripcion_Create').val("@Html.Raw(itemModel.Muni_Descripcion)");
                    </text>
                    break;
                 case "Editar":
                    <text>
                        $('#Muni_Codigo_Edit').val("@itemModel.Muni_Codigo");
                        $('#Muni_Codigo_Edit').val("@itemModel.Muni_Codigo");
                        $('#Muni_Descripcion_Edit').val("@Html.Raw(itemModel.Muni_Descripcion)");
                    </text>
                    break;
                default:
                    break;
            }
        }
    })
    $('#btnNuevo').click(function () {
        $('#modalNuevo').modal('show');
    });
    $('.btnEditar').click(function () {
        var id = $(this).data("id");
        console.log(id);
        $.ajax({
            url: `/Municipios/Edit/${id}`,
            method: "GET",
            success: function (municipio) {
                console.log(municipio, "Municipio")
                $('#Muni_Codigo_Edit').val(municipio.muni_Codigo);
                $('#Muni_Descripcion_Edit').val(municipio.muni_Descripcion);
                //$('#Muni_Codigo_Edit').val(municipio.dept_Codigo);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error("Error al cargar los datos del Municipio:", errorThrown);
            }
        });
        $('#modalEditar').modal('show');
    });

    function Eliminar(Muni_Codigo) {
        $("#Muni_Codigo_Delete").val(Muni_Codigo);
        localStorage.setItem("#Muni_Codigo_Delete", Muni_Codigo);
        $('#modalEliminar').modal('show');
    }
</script>


