@model IEnumerable<Frontend_Sistema_Votaciones.Models.DepartamentoViewModel>

@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Departamentos";
    var abrirModal = TempData["AbrirModal"];
    string serializedItem = (string)TempData["Item"];

    DepartamentoViewModel departamento = null;
    if (!String.IsNullOrEmpty(serializedItem))
    {
        departamento = JsonConvert.DeserializeObject<DepartamentoViewModel>(serializedItem);
    }
}

<header class="w-100 d-flex justify-content-between align-items-center p-2" style="background: rgb(255,255,255); min-height: 12vh;">
    <h2>Listado de @ViewData["Title"]</h2>
    <a href="~/" class="btn btn-primary" style="max-height: 40px; max-width: 150px; min-width: 100px">
        <i class="bi bi-house-door-fill"></i>
        Inicio
    </a>
</header>
<div class="card m-2 mt-4 p-3" style="overflow-x: auto">
    <header class="mb-4">
        <button id="btnNuevo" class="btn btn-outline-primary" style="max-height: 40px; max-width: 150px;" data-toggle="modal" data-target="#modal">
            <i class="bi bi-plus"></i>
            Nuevo
        </button>
    </header>
    <table id="dtDepartamentos" class="table datatable display " style="width: 100%;">
        <thead style="color: #78e7ff;">
            <tr style="background: rgb(0,0,0)">
                <th>
                    @Html.DisplayNameFor(model => model.Dept_Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dept_Descripcion)
                </th>
                <th style="max-width: 300px;">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dept_Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dept_Descripcion)
                    </td>
                    <td style="width: 5%">
                        <div class="w-100" style="max-width: 250px">
                            <div class="d-flex w-100" style="gap: 5px;">
                                <button data-id="@item.Dept_Codigo" class="btnEditar d-flex align-items-center justify-content-around btn btn-outline-warning btn-sm flex-grow-1" style="max-width: 100px">
                                    <i class="bi bi-pencil"></i>
                                    Editar
                                </button>
                                <a class="d-flex align-items-center justify-content-around btn btn-outline-secondary btn-sm flex-grow-1" style="max-width: 100px" href="@Url.Action("Details", new { id=item.Dept_Codigo })">
                                    <i class="bi bi-eye"></i>
                                    Detalles
                                </a>
                                <button class="d-flex align-items-center justify-content-around btn btn-outline-danger btn-sm flex-grow-1" style="max-width: 100px" onclick="Eliminar('@item.Dept_Codigo')">
                                    <i class="bi bi-trash-fill"></i>
                                    Eliminar
                                </button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@*<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/dataTables.min.js"></script>*@

<script>
    $(document).ready(function () {
        $('#dtDepartamentos').DataTable({
            pageLength: 10,
            responsive: true,
            language: {
                url: 'lib/datatable/esLanguageDataTable.json'
            }
        });
        $('#modal' + '@abrirModal').modal('show');
        @if (departamento != null)
        {
            switch (abrirModal)
            {
                case "Nuevo":
                    <text>
                        $('#Dept_Codigo_Create').val("@departamento.Dept_Codigo");
                        $('#Dept_Descripcion_Create').val("@Html.Raw(departamento.Dept_Descripcion)");
                    </text>
                    break;
                 case "Editar":
                    <text>
                        $('#Dept_Codigo_Edit').val("@departamento.Dept_Codigo");
                        $('#Dept_Descripcion_Edit').val("@Html.Raw(departamento.Dept_Descripcion)");
                    </text>
                    break;
                default:
                    break;
            }
        }
    })
    $('#btnNuevo').click(function () {
        $('#modalNuevo').modal('show');
    });
    $('.btnEditar').click(function () {
        var id = $(this).data("id");
        $.ajax({
            url: `/Departamentos/Edit/${id}`,
            method: "GET",
            success: function (departamento) {
                console.log(departamento, "departamento")
                $('#Dept_Codigo_Edit').val(departamento.dept_Codigo);
                $('#Dept_Descripcion_Edit').val(departamento.dept_Descripcion);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error("Error al cargar los datos del departamento:", errorThrown);
            }
        });
        $('#modalEditar').modal('show');
    });

    function Eliminar(Dept_Codigo) {
        $("#Dept_Codigo_Delete").val(Dept_Codigo);
        localStorage.setItem("#Dept_Codigo_Delete", Dept_Codigo);
        $('#modalEliminar').modal('show');
    }

</script>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Edit", new Frontend_Sistema_Votaciones.Models.DepartamentoViewModel())
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNuevo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Create", new Frontend_Sistema_Votaciones.Models.DepartamentoViewModel())
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Delete", new Frontend_Sistema_Votaciones.Models.DepartamentoViewModel())
            </div>
        </div>
    </div>
</div>
<script>
    const txtDept_Codigo = document.getElementById("Dept_Codigo_Create");
    txtDept_Codigo.addEventListener("input", () => {
        const val = txtDept_Codigo.value.replace(/[^0-9]/g, '');
        txtDept_Codigo.value = val.substr(0, 2);
    })

    const txtDept_Descripcion_Create = document.getElementById("Dept_Descripcion_Create");
    txtDept_Descripcion_Create.addEventListener("input", () => {
        const val = txtDept_Descripcion_Create.value.replace(/[^a-zA-Z]/g, '');
        txtDept_Descripcion_Create.value = val;
    })
    const txtDept_Descripcion_Edit = document.getElementById("Dept_Descripcion_Edit");
    txtDept_Descripcion_Edit.addEventListener("input", () => {
        const val = txtDept_Descripcion_Edit.value.replace(/[^a-zA-Z]/g, '');
        txtDept_Descripcion_Edit.value = val;
    })
</script>