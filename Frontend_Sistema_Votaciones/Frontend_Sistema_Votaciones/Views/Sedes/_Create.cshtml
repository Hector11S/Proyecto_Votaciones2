@model Frontend_Sistema_Votaciones.Models.SedesViewModel

@{
    var municipios = (List<MunicipioViewModel>)ViewBag.Municipios;
    ViewData["Title"] = "tbSedes".Substring(2);
    ViewData["ViewName"] = "_Create".Substring(1);
}
<h1 class="text-primary">Crear </h1>
<h4 class="text-primary">@ViewData["Title"]</h4>
<hr class="border border-primary" />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["ViewName"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sede_Descripcion" class="control-label"></label>
                <input asp-for="Sede_Descripcion" class="form-control" />
                <span asp-validation-for="Sede_Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group col-sm-5 mb-4">
                <label for="Muni_Codigo" class="control-label">Municipio</label>
                <select asp-for="Muni_Codigo" id="Muni_Codigo_Create" class="form-select">
                    <option value="">-- Municipio --</option>
                    @foreach (var item in municipios)
                    {
                        <option value="@item.Muni_Codigo">@item.Muni_Descripcion</option>
                    }
                </select>
                <span asp-validation-for="Muni_Codigo" class="text-danger"></span>

            </div>


            <div class="form-group d-flex justify-content-end">
                <div class="form-row">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    const txtMuni_Codigo = document.getElementById("Muni_Codigo_Create");
    txtMuni_Codigo.addEventListener("input", () => {
        const val = txtMuni_Codigo.value.replace(/[^0-9]/g, '');
        txtMuni_Codigo.value = val.substr(0, 2);
    })
    const txtMuni_Descripcion = document.getElementById("Muni_Descripcion_Create");
    txtMuni_Descripcion.addEventListener("input", () => {
        const val = txtMuni_Descripcion.value.replace(/[^a-zA-Z]/g, '');
        txtMuni_Descripcion.value = val;
    })
</script>