@model IEnumerable<Frontend_Sistema_Votaciones.Models.MunicipioViewModel>

@{
    ViewData["Title"] = "Municipios";
}

<header class="w-100 d-flex justify-content-between align-items-center p-2" style="background: rgb(255,255,255); min-height: 12vh;">
    <h2>Listado de Municipios</h2>
    <button href="~/" class="btn btn-primary" style="max-height: 40px; max-width: 150px; min-width: 100px">
        <i class="bi bi-house-door-fill"></i>
        Inicio
    </button>
</header>
<div class="card m-2 mt-4 p-3" style="overflow-x: auto">
    <header class="">
        <button id="btnNuevo" class="btn btn-outline-primary" style="max-height: 40px; max-width: 150px;" data-toggle="modal" data-target="#modal">
            <i class="bi bi-plus"></i>
            Nuevo
        </button>
    </header>
    <table id="dtMunicipios" class="table datatable display" style="width: 100%;">
        <thead style="color: #78e7ff;">
            <tr style="background: rgb(0,0,0)">
                <th>
                    @Html.DisplayNameFor(model => model.Muni_Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Muni_Descripcion)
                </th>
                <th style="max-width: 300px;">
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Muni_Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Muni_Descripcion)
                    </td>
                    <td style="width: 5%">
                        <div class="w-100" style="max-width: 250px">
                            <div class="d-flex w-100" style="gap: 5px;">
                                <button data-id="@item.Muni_Codigo" class="btnEditar d-flex align-items-center justify-content-around btn btn-outline-warning btn-sm flex-grow-1" style="max-width: 100px">
                                    <i class="bi bi-pencil"></i>
                                    Editar
                                </button>
                                <a class="d-flex align-items-center justify-content-around btn btn-outline-secondary btn-sm flex-grow-1" style="max-width: 100px" href="@Url.Action("Details", new { id=item.Muni_Codigo })">
                                    <i class="bi bi-eye"></i>
                                    Detalles
                                </a>
                                <button class="d-flex align-items-center justify-content-around btn btn-outline-danger btn-sm flex-grow-1" style="max-width: 100px" onclick="Eliminar('@item.Muni_Codigo')">
                                    <i class="bi bi-trash-fill"></i>
                                    Eliminar
                                </button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@*<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/dataTables.min.js"></script>*@

<script>
    $('#btnNuevo').click(function () {
        $('#modalNuevo').modal('show');
    });
    $('.btnEditar').click(function () {
        var id = $(this).data("id");
        $.ajax({
            url: `/Municipio/Edit/${id}`,
            method: "GET",
            success: function (Municipio) {
                console.log(Municipio, "Municipio")
                $('#Muni_Codigo').val(Municipio.Muni_Codigo);
                $('#Muni_Descripcion').val(Municipio.Muni_Descripcion);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                console.error("Error al cargar los datos del Municipio:", errorThrown);
            }
        });
        $('#modalEditar').modal('show');
    });

    function Eliminar(Muni_Codigo) {
        $("#inputHidden").val(Muni_Codigo);
        localStorage.setItem("inputHidden", Muni_Codigo);
        $('#modalEliminar').modal('show');
    }
</script>

<div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Edit", new Frontend_Sistema_Votaciones.Models.MunicipioViewModel())
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalNuevo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Create", new Frontend_Sistema_Votaciones.Models.MunicipioViewModel())
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Partial("_Delete", new Frontend_Sistema_Votaciones.Models.MunicipioViewModel())
            </div>
        </div>
    </div>
</div>
