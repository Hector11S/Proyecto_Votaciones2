@model Frontend_Sistema_Votaciones.Models.MunicipioViewModel


@{
    var departamentos = (List<DepartamentoViewModel>)ViewBag.Departamentos;
    ViewData["Title"] = "tbMunicipios".Substring(2);
    ViewData["ViewName"] = "_Create".Substring(1);
}
<h1 class="text-primary">Crear </h1>
<h4 class="text-primary">@ViewData["Title"]</h4>
<hr class="border border-primary" />
<div>
    <div>
        <form asp-action="@ViewData["ViewName"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-wrap justify-content-around">
                <div class="form-group col-sm-5 mb-4">
                    <label for="Dept_Codigo" class="control-label">Departamento</label>
                    <select asp-for="Dept_Codigo" id="Dept_Codigo_Create" class="form-select">
                        <option value="">-- Departamento --</option>
                        @foreach (var item in departamentos)
                        {
                            <option value="@item.Dept_Codigo">@item.Dept_Descripcion</option>
                        }
                    </select>
                    <span asp-validation-for="Dept_Codigo" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-5 mb-4">
                    <label asp-for="Muni_Codigo" class="control-label"></label>
                    <input asp-for="Muni_Codigo" id="Muni_Codigo_Create" class="form-control" />
                    <span asp-validation-for="Muni_Codigo" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-5 mb-4">
                    <label asp-for="Muni_Descripcion" class="control-label"></label>
                    <input asp-for="Muni_Descripcion" id="Muni_Descripcion_Create" class="form-control" />
                    <span asp-validation-for="Muni_Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <div class="form-row">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    const txtMuni_Codigo = document.getElementById("Muni_Codigo_Create");
    txtMuni_Codigo.addEventListener("input", () => {
        const val = txtMuni_Codigo.value.replace(/[^0-9]/g, '');
        txtMuni_Codigo.value = val.substr(0, 2);
    })
    const txtMuni_Descripcion = document.getElementById("Muni_Descripcion_Create");
    txtMuni_Descripcion.addEventListener("input", () => {
        const val = txtMuni_Descripcion.value.replace(/[^a-zA-Z]/g, '');
        txtMuni_Descripcion.value = val;
    })
</script>